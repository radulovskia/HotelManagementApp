@model HotelManagementApp.Models.City

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
        <p>
            @Html.DisplayFor(model => model.Description)
        </p>
</div>
<p>
    @if (User.IsInRole("Admin")) 
    { 
        @Html.ActionLink("Edit", "Edit", new { id = Model.CityId }, new { @class = "btn btn-link"})
    }
        <input class="btn btn-link" type="button" value="Back" onclick="history.back()" />
</p>
@if (Model.Rooms.Count > 0)
{
<h2>List of rooms in this city:</h2>
<ul>
    @foreach (HotelManagementApp.Models.Room room in Model.Rooms)
    {
        <hr />
        <li>
            <a href="/Rooms/Details/@room.Id">
                <img src="@room.RoomArtUrl" style="max-width:200px" />
            </a>
        </li>
    }
</ul>
}