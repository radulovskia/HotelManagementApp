@model HotelManagementApp.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add User To Role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.Role, new SelectList(Model.roles), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-link">Confirm</button>
    <input class="btn btn-link" type="button" value="Back" onclick="history.back()" />
}

